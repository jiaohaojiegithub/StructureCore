@model TestPojectMVC.Areas.Identity.Models.LoginInputModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>


<div class="row">
    <div class="col-md-4">
        <section>
            @using (Html.BeginForm("Login", "Account", new { Area = "Identity" }, FormMethod.Post, true, new { @class = "form-signin" }))
            {
                <h4>Use a local account to log in.</h4>
                <hr />

                <div class="form-group">
                    @Html.LabelFor(model => model.Username)
                    @Html.EditorFor(model => model.Username)
                    @Html.ValidationMessageFor(model=>model.Username)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password)
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        @Html.LabelFor(model => model.RememberLogin)
                        @Html.CheckBoxFor(model=>model.RememberLogin)
                        @Html.DisplayNameFor(model => model.RememberLogin)
                       
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
              
                @Html.ValidationSummary(true)
            }
        </section>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}